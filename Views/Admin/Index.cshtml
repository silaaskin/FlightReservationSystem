@* Views/Admin/Index.cshtml *@
@model List<UcakBiletiRezervasyonSistemi.Models.Ucus>
@{
    ViewData["Title"] = "Admin Paneli";
}

<h2 class="mb-3">Admin Paneli - Mevcut Uçuşlar</h2>
<hr />

<div class="mb-3">
    <a asp-controller="Admin" asp-action="UcusEkle" class="btn btn-primary">Yeni Uçuş Ekle</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Uçuş No</th>
                <th>Rota</th>
                <th>Boş Koltuk</th>
                <th>Temel Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ucus in Model)
            {
                <tr>
                    <td>@ucus.UcusNo</td>
                    <td>@ucus.KalkisYeri → @ucus.VarisYeri</td>
                    <td>@ucus.BosKoltukSayisi / @ucus.Kapasite</td>
                    <td>@ucus.TemelFiyat.ToString("C")</td>
                    <td>
                        <a asp-controller="Admin" asp-action="UcusDetay" asp-route-ucusNo="@ucus.UcusNo" class="btn btn-info btn-sm me-1">
                            Detay
                        </a>
                        <form asp-controller="Admin" asp-action="UcusIptalEt" asp-route-ucusNo="@ucus.UcusNo" method="post" class="d-inline" onsubmit="return confirm('Uçuşu iptal etmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-danger btn-sm">İptal Et</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
