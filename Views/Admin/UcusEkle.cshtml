@* Views/Admin/UcusEkle.cshtml *@
@model UcakBiletiRezervasyonSistemi.Models.Ucus
@{
    ViewData["Title"] = "Yeni Uçuş Ekle";
}

<h2 class="mb-3">@ViewData["Title"]</h2>
<hr />

<form asp-controller="Admin" asp-action="UcusEkle" method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="UcusNo" class="form-label">Uçuş Numarası</label>
            <input asp-for="UcusNo" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="KalkisYeri" class="form-label">Kalkış Yeri</label>
            <input asp-for="KalkisYeri" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="VarisYeri" class="form-label">Varış Yeri</label>
            <input asp-for="VarisYeri" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="KalkisTarihiSaati" class="form-label">Kalkış Tarih ve Saati</label>
            <input asp-for="KalkisTarihiSaati" type="datetime-local" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Kapasite" class="form-label">Kapasite (Koltuk Sayısı)</label>
            <input asp-for="Kapasite" type="number" min="10" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="TemelFiyat" class="form-label">Temel Fiyat (TL)</label>
            <input asp-for="TemelFiyat" type="number" step="0.01" min="100" class="form-control" required />
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Uçuşu Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </div>
</form>
