@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="card bg-primary text-white mb-4">
    <div class="card-body text-center py-5">
        <h1 class="display-4"><i class="fas fa-plane"></i> Uçak Bileti Rezervasyon Sistemi</h1>
        <p class="lead">Hayalinizdeki destinasyona ulaşmanın en kolay yolu!</p>
        <a asp-controller="Rezervasyon" asp-action="Index" class="btn btn-light btn-lg mt-3">
            <i class="fas fa-search"></i> Uçuş Aramaya Başla
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-search-location fa-3x text-primary mb-3"></i>
                <h3>Kolay Arama</h3>
                <p class="text-muted">Binlerce uçuş arasından size en uygun olanı hızlıca bulun.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-chair fa-3x text-primary mb-3"></i>
                <h3>Koltuk Seçimi</h3>
                <p class="text-muted">Görsel harita üzerinden koltuğunuzu seçin. Business veya ekonomi sınıf!</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-tags fa-3x text-primary mb-3"></i>
                <h3>Özel Fiyatlar</h3>
                <p class="text-muted">Erken rezervasyon ve kupon indirimleriyle tasarruf edin!</p>
            </div>
        </div>
    </div>
</div>