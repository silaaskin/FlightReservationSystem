@* Views/Kullanici/Login.cshtml *@
@{
    ViewData["Title"] = "Kullanıcı Girişi";
    Layout = null; // Layout dosyasını atlayıp tam kontrol sağlıyoruz.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>

<body class="login-body">
    <div class="login-container">
        <h2 class="text-center text-primary mb-4"><i class="fas fa-sign-in-alt"></i> Sisteme Giriş</h2>
        <hr class="mb-4" />

        @if (ViewBag.HataMesaji != null)
        {
            <div class="alert alert-danger">
                @ViewBag.HataMesaji
            </div>
        }

        <form asp-controller="Kullanici" asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="tcNo"><i class="fas fa-user"></i> TC Kimlik No</label>
                <input type="text" name="tcNo" class="form-control form-control-lg" required maxlength="11" />
            </div>
            <div class="form-group mb-4">
                <label for="sifre"><i class="fas fa-key"></i> Şifre</label>
                <input type="password" name="sifre" class="form-control form-control-lg" required />
            </div>
            
            <button type="submit" class="btn btn-primary w-100 btn-lg">Giriş Yap</button>
        </form>

        <p class="mt-4 text-center text-muted small">
            Test Kullanıcıları: Admin (11111111111 / admin123), Müşteri (22222222222 / musteri123)
        </p>
    </div>
</body>
</html>