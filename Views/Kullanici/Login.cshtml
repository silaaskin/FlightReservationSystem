@{
    ViewData["Title"] = "Kullanıcı Girişi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            padding: 40px;
            max-width: 450px;
            width: 100%;
        }
        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .login-header h2 {
            color: #0d6efd;
            font-weight: bold;
        }
        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        .btn-login {
            background-color: #0d6efd;
            border: none;
            padding: 12px;
            font-weight: bold;
        }
        .btn-login:hover {
            background-color: #0b5ed7;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <i class="fas fa-plane-departure fa-3x text-primary mb-3"></i>
            <h2>Uçak Bileti Rezervasyon Sistemi</h2>
            <p class="text-muted">Giriş Yap</p>
        </div>
        
        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
            </div>
        }

        @if (TempData["Mesaj"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Mesaj"]
            </div>
        }

        <form asp-controller="Kullanici" asp-action="Login" method="post">
            <div class="mb-3">
                <label class="form-label">TC Kimlik No</label>
                <input type="text" name="tcNo" class="form-control" required maxlength="11" placeholder="11 haneli TC No" />
            </div>
            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input type="password" name="sifre" class="form-control" required placeholder="Şifreniz" />
            </div>
            <button type="submit" class="btn btn-primary btn-login w-100">Giriş Yap</button>

            <div class="text-center mt-3">
                <p>Hesabınız yok mu? <a asp-action="KayitOl" class="text-primary text-decoration-none fw-bold">Şimdi Kayıt Ol</a></p>
            </div>
        </form>
    </div>
</body>
</html>