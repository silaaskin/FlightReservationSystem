@model System.Collections.Generic.List<UcakBiletiRezervasyonSistemi.Models.Ucus>
@{
    ViewData["Title"] = "Uçuş Arama ve Öneriler";
    var fiyatServisi = (UcakBiletiRezervasyonSistemi.Services.FiyatlandirmaServisi)ViewBag.FiyatServisi;
}

<h2><i class="fas fa-search"></i> Uçuş Arama</h2>
<hr />

<form asp-controller="Rezervasyon" asp-action="UcusAra" method="post" class="mb-5 p-4 border rounded shadow-sm">
    <div class="row">
        <div class="col-md-4 form-group mb-3">
            <label for="kalkis">Kalkış Yeri</label>
            <input type="text" name="kalkis" class="form-control" placeholder="İstanbul, Ankara..." required />
        </div>
        <div class="col-md-4 form-group mb-3">
            <label for="varis">Varış Yeri</label>
            <input type="text" name="varis" class="form-control" placeholder="İzmir, Antalya..." required />
        </div>
        <div class="col-md-4 form-group mb-3 d-flex flex-column">
            <label for="tarih">Tarih</label>
            <input type="date" name="tarih" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
            <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-search"></i> Uçuş Ara</button>
        </div>
    </div>
</form>

@if (Model != null && Model.Count > 0)
{
    <h3 class="mb-4"><i class="fas fa-star"></i> Sizin İçin Önerilen Uçuşlar</h3>
    
    <div class="row">
        @foreach (var ucus in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 border-info">
                    <div class="card-header bg-info text-white">
                        <i class="fas fa-route"></i> <strong>@ucus.KalkisYeri → @ucus.VarisYeri</strong>
                    </div>
                    <div class="card-body">
                        <p>Uçuş No: <strong>@ucus.UcusNo</strong></p>
                        <p>Tarih: <strong>@ucus.KalkisTarihiSaati.ToString("dd MMM HH:mm")</strong></p>
                        <p class="text-danger">Kalan Koltuk: <strong>@ucus.BosKoltukSayisi</strong></p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <span class="h5 text-primary">
                            @(fiyatServisi.FiyatHesapla(ucus, 1).ToString("C"))
                        </span>
                        <a asp-controller="Rezervasyon" asp-action="Detay" asp-route-ucusNo="@ucus.UcusNo" class="btn btn-warning btn-sm">Bilet Al</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (Model != null && Model.Count == 0)
{
    <div class="alert alert-warning">
        Şu anda sistemde listelenecek önerilen uçuş bulunmamaktadır.
    </div>
}